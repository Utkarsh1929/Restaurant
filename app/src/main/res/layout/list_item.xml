<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_listname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/averia_libre_bold"
        android:text="Name"
        android:textColor="#090909"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_listtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_listname"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/averia_libre"
        android:text="type"
        android:textColor="#0B0A0A"
        android:textSize="16dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt_listcost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/averia_libre_bold"
        android:text="cost"
        android:textColor="#090808"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="12dp"
        android:layout_marginLeft="50dp"
        android:backgroundTint="#FB0E0E"
        android:text="Del"
        android:textColor="#050505"
        android:layout_below="@+id/txt_listcost"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/check_listmark"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>


</RelativeLayout>